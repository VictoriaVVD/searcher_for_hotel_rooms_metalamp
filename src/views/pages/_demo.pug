block content
-
    const colors = [
        {
            hex: "#1F2041", 
            name: "Dark Shade 100%"
        },
        {
            hex: "#1F2041", 
            name: "Dark Shade 75%"
        },
        {
            hex: "#1F2041", 
            name: "Dark Shade 50%"
        },
        {
            hex: "#1F2041", 
            name: "Dark Shade 25%"
        },
        {
            hex: "#1F2041", 
            name: "Dark Shade 5%"
        },
        {
            hex: "#BC9CFF", 
            name: "Purple"
        },
        {
            hex: "#6FCF97", 
            name: "Green"
        },

    ]
-
    const content__text  = [
        {
            title: "h1",
            text: "This one is the sub-section or widget title",
        },
        {
            title: "h2",
            text: "Next one is the item title inside widgets",
        },
        {
            title: "h3",
            text: "This is a label or CTA text",
        },
    ]
.demo 
    .demo__content
        .demo__col
            table.table
                tbody.tbody
                    each color in colors 
                        tr
                            th(style=`background: ${color.hex}`)
                            td 
                                h2= color.name
                            td= color.hex
        .demo__col
            each item in content__text 
                #{item.title}.th__opacity= item.title
                #{item.title}= item.text
            p.th__opacity Body
            p This is the body text which is used for most of the design, like paragraphs, lists, etc.
